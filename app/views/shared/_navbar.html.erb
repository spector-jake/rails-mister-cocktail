<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="logo-title">
    <h2><i class="fas fa-cocktail"><%= link_to 'Mister Cocktail', cocktails_path %></i></h2>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <a href="" class="btn btn-primary btn-rounded" data-toggle="modal" data-target="#modalLoginForm">Add Cocktail</a>
      </li>
    </ul>
  </div>
</div>


<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Add Cocktails</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <%= simple_form_for(@cocktail) do |f| %>
          <% if @cocktail.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @cocktail.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :name %> <br>
            <%= f.text_field :name %> <br>

            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>

            <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>


