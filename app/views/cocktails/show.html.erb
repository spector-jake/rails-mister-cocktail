<h1><%= @cocktail.name %></h1>

<h2>Ingredients</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description%> <%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash"></i>
    <% end %></li>
  <% end %>
</ul>

<%= link_to 'New Ingredient', new_cocktail_dose_path(@cocktail.id), class: " btn btn-outline-primary" %>
